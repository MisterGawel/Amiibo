<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ðŸ”¹ Background -->
    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_amiibo"
        android:scaleType="centerCrop"
        android:alpha="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="-1dp" />

    <!-- ðŸ”¹ Contenu central -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Titre -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Les rÃ¨gles du quizz"
            android:fontFamily="@font/bauhaus"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp" />

        <!-- Bloc scores -->
        <LinearLayout
            android:id="@+id/scoreContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <!-- +2 -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="+2"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#00B050"
                    android:background="@drawable/bg_score_positive"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Bonne\nrÃ©ponse"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- -1 -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="-1"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#FEC000"
                    android:background="@drawable/bg_score_pass"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Passer\nla question"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!-- -2 -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="-2"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:backgroundTint="#E30613"
                    android:background="@drawable/bg_score_negative"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:text="Mauvaise\nrÃ©ponse"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Instructions swipe -->
        <TextView
            android:id="@+id/swipeRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Ã  Droite"
            android:textSize="20sp"
            android:fontFamily="@font/bauhaus"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/swipeRightParagraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="une question sur le nom de lâ€™amiibo."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/swipeLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe Ã  Gauche"
            android:textSize="20sp"
            android:fontFamily="@font/bauhaus"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/swipeLeftParagraph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="une question sur la gameserie."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Bouton -->
        <Button
            android:id="@+id/btnUnderstood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="J'ai compris les rÃ¨gles"
            android:textColor="@android:color/white"
            android:backgroundTint="#E30613"
            android:textSize="18sp"
            android:fontFamily="@font/bauhaus"
            android:paddingVertical="12dp"
            android:paddingHorizontal="16dp"
            android:layout_marginTop="40dp"
            app:cornerRadius="12dp" />
    </LinearLayout>

    <!-- ðŸ”¹ Footer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/footerIconLeft"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bx_arrow_back"
            android:contentDescription="IcÃ´ne retour"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>